
@{
    ViewBag.Title = "Index";
}


<div id="frmIndexAcabadoQui">
    <div class="form-horizontal">
        <div class="panel panel-default">

            <div class="panel-body">
                <div id="gridContainer"></div>
            </div>
        </div>
    </div>
</div>

<script>

    var storeTipo = [{ AcqSTip: 'S', AcqTipDes: 'ESTANDAR' }, { AcqSTip: 'F', AcqTipDes: 'FUNCIONAL' }];
    var storeEstado = [{ ESTADO: 'A', ESTADO_DES: 'Activo' }, { ESTADO: 'I', ESTADO_DES: 'Inactivo' }]
    $(() => {
        const DxSource = new DevExpress.data.CustomStore({
            key: 'AcqCCOD',
            load() {
                return sendRequest(`/AcabadoQuimico/ListarAcabadoQui_all`).then(data => {
                    /*// Filtrar solo los registros nuevos si lo necesitas
                    console.log("data: ", data);
                    const nuevos = data.filter(x => x.AcqNewSis == 'S');

                    // Agregar campo visual: 01, 02, 03, ...
                    nuevos.forEach((item, index) => {
                        item.AcqCcodVisual = (index + 1).toString().padStart(2, '0');
                    });
                    */
                    return data;
                });
            },
            insert(values) {
                return sendRequest(`/AcabadoQuimico/InsertAcabadoQui`, 'POST', JSON.stringify(values));
            },
            update(key, values) {
                values.AcqID = key;
                return sendRequest(`/AcabadoQuimico/UpdateAcabadoQui`, 'PUT', JSON.stringify(values));
            },
            remove(key) {
                var values = { AcqID: key }
                //values.IdUbicacion = key;
                return sendRequest(`/AcabadoQuimico/DeleteAcabadoQui`, 'DELETE', JSON.stringify(values));
            },
        });
        console.log(DxSource);
        const dataGrid =
            $('#gridContainer').dxDataGrid({
                dataSource: DxSource,
                keyExpr: 'AcqCCOD',
                editing: {
                    mode: 'popup',
                    allowUpdating: true,
                    useIcons: true,
                    allowAdding: true,
                    allowDeleting: true,
                    popup: {
                        title: 'MANTENIMIENTO ACABADO QUIMICO',
                        showTitle: true,
                        width: 700,
                        height: 310,
                    },
                    form: {
                        items: [{
                            itemType: 'group',
                            colSpan: 2,
                            items: [
                                {
                                    dataField: 'AcqDdes',
                                    validationRules: [{ type: 'required' }]
                                },
                                {
                                    dataField: 'AcqDMne',
                                    validationRules: [{ type: 'required' }]
                                },
                                {
                                    dataField: 'AcqSclase',
                                    validationRules: [{ type: 'required' }]
                                }
                            ]
                        }],
                    },
                },
                columns: [
                    { dataField: 'AcqCCOD', caption: 'Codigo', },
                    { dataField: 'AcqDdes', caption: 'Nombre', },
                    { dataField: 'AcqDMne', caption: 'Abreviatura', },
                    {
                        dataField: 'AcqSclase', caption: 'Tipo', lookup: {
                            dataSource: storeTipo,
                            valueExpr: 'AcqSTip',
                            displayExpr: 'AcqTipDes',
                        },
                    },
                    {
                        dataField: 'ESTADO', caption: 'Estado', lookup: {
                            dataSource: storeEstado,
                            valueExpr: 'ESTADO',
                            displayExpr: 'ESTADO_DES',
                        }
                    },
                    {
                        dataField: 'FechaReg',
                        caption: 'Fecha Creación',
                        dataType: 'datetime',
                        format: "dd/MM/yyyy"
                    },
                    { dataField: 'USUARIO_REG', caption: 'Usuario Registro', },
                    { dataField: 'HOST_REG', caption: 'PC', },
                    {
                        dataField: 'FECHA_ACT',
                        caption: 'Fecha Modificación',
                        dataType: 'datetime',
                        format: "dd/MM/yyyy"
                    },
                    { dataField: 'USUARIO_ACT', caption: 'Usuario Modificación', },
                    { dataField: 'HOST_ACT', caption: 'PC edit', },
                ],
                toolbar: {
                    items: [
                        {
                            location: "after",
                            widget: "dxButton",
                            options: {
                                icon: "add",
                                text: "AGREGAR",
                                onClick: function () {
                                    dataGrid.addRow();
                                }
                            },
                        }, {
                            location: 'after',
                            widget: 'dxButton',
                            options: {
                                icon: 'refresh',
                                text: "ACTUALIZAR",
                                onClick() {
                                    dataGrid.refresh();
                                },
                            },
                        },
                        'exportButton',
                    ],
                },
                hoverStateEnabled: true,
                filterRow: { visible: true },
                showColumnLines: true,
                showRowLines: true,
                rowAlternationEnabled: true,
                showBorders: true,
                selection: {
                    mode: 'single',
                },
                export: {
                    enabled: true,
                },
                onExporting(e) {
                    const workbook = new ExcelJS.Workbook();
                    const worksheet = workbook.addWorksheet('data');

                    DevExpress.excelExporter.exportDataGrid({
                        component: e.component,
                        worksheet,
                        autoFilterEnabled: true,
                    }).then(() => {
                        workbook.xlsx.writeBuffer().then((buffer) => {
                            saveAs(new Blob([buffer], { type: 'application/octet-stream' }), 'data.xlsx');
                        });
                    });
                    e.cancel = true;
                },
            }).dxDataGrid('instance');

        console.log(dataGrid);
        console.log(dataGrid.getDataSource());

    });</script>
